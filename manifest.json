{
    "name": "DuckDuckGo for Chrome - V2 Beta",
    "version": "2017.4.13",
    "description": "DuckDuckGo enhancements for Chrome.",
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        },
        "default_popup": "html/trackers.html"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+G",
          "mac": "Alt+G",
          "linux": "Alt+G",
          "windows": "Alt+G"
        }
      }
    },
    "omnibox": {"keyword": "d"},
    "options_page": "html/options.html",
    "background": {
            "scripts": [
                "js/require.js",
                "js/utils.js",
                "js/topBlocked.js",
                "js/sites.js",
                "js/site.js",
                "js/companies.js",
                "js/company.js",
                "js/load.js",
                "js/settings.js",
                "js/atb.js",
                "js/trackerLists.js",
                "js/trackers.js",
                "https-everywhere/chromium/rules.js", 
                "https-everywhere/chromium/storage.js", 
                "https-everywhere/chromium/util.js", 
                "https-everywhere/chromium/background.js", 
                "https-everywhere/chromium/incognito-cache-clearing.js",
                "js/background.js"
            ]
    },
    "chrome_settings_overrides": {
      "search_provider": {
        "encoding": "UTF-8",
        "favicon_url": "https://duckduckgo.com/favicon.ico",
        "is_default": true,
        "keyword": "duckduckgo.com",
        "name": "DuckDuckGo Search",
        "search_url": "https://duckduckgo.com/?q={searchTerms}",
        "suggest_url": "https://duckduckgo.com/ac/?q={searchTerms}&type=list"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "all_frames": true,
        "css": ["css/noatb.css"]
      },
      {
          "js": [
              "js/socialwidgets.js"
          ],
          "matches": [
              "<all_urls>"
          ],
          "all_frames": true,
          "run_at": "document_idle"
      }
    ],
    "permissions": [
        "contextMenus",
        "webRequest",
        "webRequestBlocking",
        "*://*/*",
        "webNavigation", 
        "webRequestBlocking", 
        "activeTab",
        "tabs", 
        "cookies", 
        "storage", 
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "img/*"
    ]
}
