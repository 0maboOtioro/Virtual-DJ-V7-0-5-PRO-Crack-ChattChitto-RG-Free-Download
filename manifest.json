{
    "name": "DuckDuckGo for Chrome",
    "version": "42.6.1",
    "description": "DuckDuckGo enhancements for Chrome.",
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        },
        "default_popup": "html/popup.html"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+G",
          "mac": "Alt+G",
          "linux": "Alt+G",
          "windows": "Alt+G"
        }
      }
    },
    "omnibox": {"keyword": "d"},
    "options_page": "html/options.html",
    "background": {
            "scripts": ["js/background.js"]
    },
    "chrome_settings_overrides": {
      "homepage": "https://www.duckduckgo.com",
      "search_provider": {
          "name": "DuckDuckGo",
          "keyword": "ddg",
          "search_url": "https://duckduckgo.com/?q={searchTerms}",
          "encoding": "UTF-8",
          "is_default": true
      },
      "startup_pages": ["https://duckduckgo.com"]
    },
    "permissions": [
      "contextMenus"
    ]
}
